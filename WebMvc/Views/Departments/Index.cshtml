@model IEnumerable<WebMvc.Models.Department>

@{
    ViewData["Title"] = "Departments";
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
</head>

<body>
    <div>
        <h2>Departments</h2>
        <a asp-action="Create" class="btn btn-primary btn-xs">Register new department</a>
    </div>
    <hr />
    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th class="text-primary">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="material-icons" asp-action="Edit" asp-route-id="@item.Id">create</a>
                    </td>
                    <td>
                        <a class="material-icons" asp-action="Details" asp-route-id="@item.Id">description</a>
                    </td>
                    <td>
                        <a class="material-icons text-danger" asp-action="Delete" asp-route-id="@item.Id">delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>